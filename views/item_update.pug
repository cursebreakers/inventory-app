extends layout 

block content

  div.header
    h1= title

  div.tray
    if errors && errors.length
      ul
        each error in errors
          li.error= error.msg

    form(action=`/inventory/item/${item._id}/update`, method='POST')
      label(for='name') Name:
      input(type='text', id='name', name='name', value=item.name)
      br
      label(for='description') Description:
      textarea(id='description', name='description')= item.description
      br
      label(for='category') Category:
      select(id='category', name='category')
        each category in categories
          option(value=category._id, selected=item.category._id==category._id)= category.name
      br
      label(for='price') Price:
      input(type='number', id='price', name='price', value=item.price)
      br
      label(for='stock') Stock:
      input(type='number', id='stock', name='stock', value=item.stock)
      br
      button(type='submit') Apply Changes 